# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[**]
end_of_line = crlf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 2

[**.ps1]
indent_style = space
indent_size = 4

[docs/**.md]
indent_style = space
indent_size = 4

[**.rst]
end_of_line = lf

[LICENSE.txt]
indent_style = space
indent_size = 3
